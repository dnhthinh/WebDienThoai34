@model List<WebsiteBanDienThoai.Models.Entities.Product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link rel="shortcut icon" href="~/assets/images/favicon.ico" type="image/png">
<!-- ::::::::::::::All CSS Files here :::::::::::::: -->
<link rel="stylesheet" href="~/assets/css/vendor/vendor.min.css">
<link rel="stylesheet" href="~/assets/css/plugins/plugins.min.css">
<link rel="stylesheet" href="~/assets/css/style.min.css">
<!-- ...:::: Start Shop Section:::... -->
<div class="shop-section">
    <div class="container">
        <div class="row flex-column-reverse flex-lg-row">
            <div class="col-lg-12">
                <!-- Start Shop Product Sorting Section -->
                <div class="shop-sort-section">
                    <div class="container">
                        <div class="row">
                            <!-- Start Sort Wrapper Box -->
                            <div class="sort-box d-flex justify-content-between align-items-md-center align-items-start flex-md-row flex-column"
                                 data-aos="fade-up" data-aos-delay="200">
                                <!-- Start Sort tab Button -->


                            </div> <!-- Start Sort Wrapper Box -->
                        </div>
                    </div>
                </div> <!-- End Section Content -->
                <!-- Start Tab Wrapper -->
                <div class="row">
                    @{
                        int delay = 0; // Đặt giá trị ban đầu của delay
                    }
                    @foreach (var item in Model)
                    {
                        <div class="col-xl-3 col-lg-4 col-sm-6 col-12">
                            <!-- Start Product Default Single Item -->
                            <div class="product-default-single-item product-color--golden"
                                 data-aos="fade-up" data-aos-delay="@delay">
                                <div class="image-box">
                                    <a href="@Url.Action("Details", "Shop", new { id = item.ProductID})" class="image-link">
                                        <img style="max-width:270px; max-height:285px" src="~/assets/images/product/home-1/@item.Image1" alt="@item.ProductName">
                                    </a>
                                </div>
                                <div class="content">
                                    <div class="content-left">
                                        <h6 class="title">
                                            <a href="@Url.Action("Details", "Shop", new { id = item.ProductID })">@item.ProductName</a>
                                        </h6>
                                    </div>
                                </div>
                            </div>
                            <!-- End Product Default Single Item -->
                        </div>
                        delay += 150;
                    }
                </div>









                <!-- Start Pagination -->
                <!--div class="page-pagination text-center" data-aos="fade-up" data-aos-delay="0">
                    <ul>
                        <li><a class="active" href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#"><i class="ion-ios-skipforward"></i></a></li>
                    </ul>
                </!--div> <!-- End Pagination -->
            </div> <!-- End Shop Product Sorting Section  -->
        </div>
    </div>
</div> <!-- ...:::: End Shop Section:::... -->
