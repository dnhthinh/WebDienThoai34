@model WebsiteBanDienThoai.Models.Entities.Order

@{ ViewBag.Title = "ThanhToanDonHang";
                Layout = "~/Views/Shared/_MainLayout.cshtml"; }

<h2>CHECK OUT PAGE</h2>

@using (Html.BeginForm("DatHang", "GioHang", new { @class = "" }))
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.OrderID)



    <div class="form-group">
        <div class="control-label col-md-3 Bold"> <b> 	Order Date</b></div>
        <div class="col-md-9">
            @Html.EditorFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-3 Bold"> <b> 	Total  </b></div>

        <div class="col-md-9">
            <h3 class="text-danger"> @String.Format("{0:0,0}", @ViewBag.tongtien) VNĐ </h3>
        </div>
    </div>




    <form action="@Url.Action("Index", "Order")" method="POST">
        <input type="submit" value="Check Out" class="btn btn-primary" />
    </form>

</div>}

